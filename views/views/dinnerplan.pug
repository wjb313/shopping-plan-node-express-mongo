// **** DINNER MENU PLAN (DMP) MODAL ****
#dmpModal.modal(data-js-dmp-modal='' tabindex='-1')
  .modalContent
    header.modalContentHeader
      h2(data-js-dmp-modal-header='')
    form.modalForm(action='')
      label.dmpModalLabel Main
      input.modalFormInput(type='text' data-js-input-one='main')
      p#mainDishHint.inputHint Enter a main dish here
      label.dmpModalLabel Side
      input.modalFormInput(type='text' data-js-input-two='side1')
      p#mainDishHint.inputHint Enter a side dish here
      label.dmpModalLabel Side
      input.modalFormInput(type='text' data-js-input-three='side2')
      p#mainDishHint.inputHint
        | Enter another side here, if you like
      label.dmpModalLabel Other
      input.modalFormInput(type='text' data-js-input-four='other')
      p#mainDishHint.inputHint
        | Enter miscellaneous items here, if you have any
      label.dmpModalLabel Notes
      textarea.modalFormInput(name='Notes' rows='3' cols='30' data-js-input-five='notes')
      p#mainDishHint.inputHint
        | Enter any notes you may want
      footer.modalContentFooter
        button.modalBtn(data-js-new-item-submit='') Enter
        button.modalBtn(data-js-dmp-modal-close='') Close

