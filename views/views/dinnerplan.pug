// **** DOTW REORDER MODAL ****
.modal(data-js-reorder-modal='')
  // Modal content
  .modalContent.modalContentCentered
    header.modalContentHeader
      h2 Choose start day
    span.clickableDays Saturday
    span.clickableDays Sunday
    span.clickableDays Monday
    span.clickableDays Tuesday
    span.clickableDays Wednesday
    span.clickableDays Thursday
    span.clickableDays Friday
    footer.modalContentFooter
      button.modalBtn(data-js-reorder-modal-close='') Close
// **** CLEAR ALL MENU ITEMS MODAL ****
.modal(data-js-clear-modal='')
